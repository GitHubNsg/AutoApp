<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="org.masonapps.autoapp.sections.RawDataFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendButtonRawData"
            android:padding="10dp"
            android:layout_marginLeft="6dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="?attr/borderlessButtonStyle"
            android:src="@drawable/ic_send_white"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/sendButtonRawData"
            android:layout_centerVertical="true"
            android:inputType="none"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:id="@+id/editTextRawData"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollViewRawData"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false"
        android:paddingBottom="58dp"
        android:layout_below="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=">>> "
            android:id="@+id/textViewRawData"
            android:padding="16dp"/>
    </ScrollView>
</RelativeLayout>
